{
  "manifest_version": 2,
  "name": "pile",
  "description": "pile",
  "version": "1.4.1",
  "icons": {
    "16": "./content/icons/icon-16.png",
    "48": "./content/icons/icon-48.png",
    "128": "./content/icons/icon-96.png"
  },
  "browser_action": {
    "default_icon": "./content/icons/icon-96.png",
    "default_title": "pile",
    "default_popup": "./pages/popup.html"
  },
  "permissions": [
    "alarms",
    "https://getpocket.com/v3/*",
    "https://t0.gstatic.com/faviconV2/*",
    "https://logo.clearbit.com/*",
    "https://img.readitlater.com/i/*"
  ],
  "background": {
    "scripts": ["./pages/background.ts"]
  },
  "options_ui": {
    "chrome_style": true,
    "page": "./pages/options.html"
  },
  "web_accessible_resources": ["./pages/oauth/pocket.html"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}