{
  "name": "pile",
  "version": "1.0.1",
  "author": "Emmanuel Krebs <e-krebs@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/manifest.json --host localhost --target webext-dev",
    "build": "yarn clean && parcel build src/manifest.json --target webext-prod",
    "zip": "cd dist/webext-prod && bestzip pile.zip *",
    "clean": "rimraf .parcel-cache dist pile.zip",
    "lint": "eslint --ext .ts,.tsx src",
    "setup-ci": "cp ./src/env.sample.json ./src/env.json"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "dependencies": {
    "@mui/material": "^5.1.1",
    "classnames": "^2.3.1",
    "date-fns": "^2.25.0",
    "node-vibrant": "3.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-hotkeys-hook": "^3.4.4",
    "react-query": "^3.32.3",
    "use-async-effect": "^2.2.3"
  },
  "devDependencies": {
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@parcel/config-webextension": "^2.0.1",
    "@parcel/transformer-svg-react": "^2.0.1",
    "@parcel/validator-eslint": "^2.0.1",
    "@parcel/validator-typescript": "^2.0.1",
    "@types/chrome": "^0.0.163",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "autoprefixer": "^10.4.0",
    "bestzip": "^2.2.0",
    "eslint": "^7.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "parcel": "^2.0.1",
    "postcss": "^8.3.11",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.4.4"
  },
  "alias": {
    "components": "./src/components",
    "content": "./src/content",
    "env.json": "./src/env.json",
    "helpers": "./src/helpers",
    "services": "./src/services",
    "utils": "./src/utils"
  },
  "resolutions": {
    "json-schema": ">= 0.4.0",
    "nth-check": ">= 2.0.1"
  }
}
